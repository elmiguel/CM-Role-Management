{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017"],
    "baseUrl": "",
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "formatOnSave": true
  },
  "node": {
    "console": "empty",
    "fs": "empty",
    "net": "empty",
    "tls": "empty"
  }
}
